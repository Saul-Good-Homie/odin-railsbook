<div class="card mb-3">
    <div class= "card-body">
        <div class= "row no-gutters align-items-center">
            <div class="col-md-auto">
                <img class= "rounded-circle" src="https://bulma.io/images/placeholders/64x64.png">
            </div>
            <div class="col text-left">
                <h5 class="card-title"><%=current_user.name%></h5>
            </div>
        </div>

        <div class= "row no-gutters align-items-center">
            <div class="col-md-auto">
                <p class="card-text"><p class="font-weight-bold">Posts: <small class="text-muted"><%= current_user.posts.count%></small></p> 
            </div>
            <div class="col-md-auto">
                <p class="card-text"><p class="font-weight-bold">Friends: <small class="text-muted"><%= current_user.friends.count%></small></p> 
            </div>
        </div>
    </div>
</div>


