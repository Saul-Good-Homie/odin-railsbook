<div class="container">
  <div class="row">
    <div class="col text-center">
    </div>
    <div class="col-sm-6">
        <div class="row mb-3">

            <% @notifications.each do |n| %>
                <div class="card mb-3"> 
                    <div class= "row mt-1 mb-1">
                      <%if n.action == "commented"%>
                      <strong><%=link_to n.actor.name, user_path(id: n.actor_id), class: "deco-none"%></strong>
                      <%="#{n.action} on your"%> <strong><%=link_to n.notifiable_type, post_path(id: n.notifiable_id)%></strong>
                        
                        <% elsif n.action == "liked"%>
                        <strong><%=link_to n.actor.name, user_path(id: n.actor_id), class: "deco-none"%></strong>
                        <%= "#{n.action} your" %><strong><%=link_to n.notifiable_type, post_path(id: n.notifiable_id)%></strong>

                        <% elsif n.action == "accepted your friend request"%>
                          <strong><%=link_to n.actor.name, user_path(id: n.actor_id), class: "deco-none"%></strong><%= "#{n.action}."%>

                        <% elsif n.action == "sent a friend request"%>
                          <strong><%=link_to n.actor.name, user_path(id: n.actor_id), class: "deco-none"%></strong><%= "#{n.action}."%>

                        <% end %>
                    </div>
                </div>
                <%end%>
        </div>

    </div>
    <div class="col text-center">
    </div>
  </div>
</div>


